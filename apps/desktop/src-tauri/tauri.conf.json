{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Voquill",
  "version": "0.1.0",
  "identifier": "com.voquill.desktop",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Voquill",
        "width": 900,
        "height": 610,
        "minWidth": 800,
        "minHeight": 600,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "withGlobalTauri": false,
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: asset:; font-src 'self' data:; connect-src 'self' https://firebaseapp.com https://*.googleapis.com https://api.groq.com https://accounts.google.com ipc: http://localhost:* https://localhost:*; media-src 'self' asset:;",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/transcription-audio/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "macOS": {
      "hardenedRuntime": true,
      "minimumSystemVersion": "13.3",
      "entitlements": "macos/Voquill.entitlements"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:voquill.db"
      ]
    },
    "updater": {
      "endpoints": [],
      "pubkey": "__UPDATER_PUBLIC_KEY__"
    }
  }
}